{
  "name": "rex-action",
  "version": "1.7.0",
  "main": "./lib/index.js",
  "rex": {
    "bundleAll": true
  },
  "eslintConfig": {
    "extends": "prometheusresearch",
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "lines": 60
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!rex-)"
    ]
  },
  "dependencies": {
    "@prometheusresearch/react-ui": "^0.24.1",
    "autobind-decorator": "^1.2.0",
    "debug": "^2.6.3",
    "empty": "^0.10.1",
    "escape-regexp": "0.0.1",
    "history": "^4.6.0",
    "invariant": "^2.1.1",
    "lodash": "^3.10.1",
    "memoize-decorator": "^1.0.2",
    "qs": "^6.4.0",
    "react-clone-referenced-element": "^1.0.1",
    "react-stylesheet": "^2.0.2",
    "rethemeable": "^2.0.0",
    "styling": "^0.4.0"
  },
  "peerDependencies": {
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-jest": "^20.0.3",
    "babel-plugin-espower": "^1.0.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-prometheusresearch": "^1.0.0",
    "eslint": "^3.17.1",
    "eslint-config-prometheusresearch": "^0.4.0",
    "eslint-plugin-jest": "^20.0.3",
    "estraverse-fb": "^1.3.1",
    "flow-bin": "^0.47.0",
    "inspect-react-element": "^1.1.1",
    "jest-cli": "^20.0.4",
    "mocha": "^2.3.3",
    "nyc": "^6.0.0",
    "power-assert": "^1.1.0",
    "prettier": "^0.22.0",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.0",
    "react-shallow-testutils": "^1.0.0",
    "sinon": "^1.17.1"
  }
}
